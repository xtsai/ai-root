  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "XAdmin DEBUG",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug", "--", "--inspect-brk"],
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "sourceMaps": true,
      "restart": true,
      "stopOnEntry": false,
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}/apps/x-admin",
      "outFiles": ["${workspaceFolder}/apps/x-admin/dist/**/*.js"]
    }
  ]
}
